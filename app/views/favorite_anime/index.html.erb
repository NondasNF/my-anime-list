<p id="notice"><%= notice %></p>

<h1>Favorites</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Gender</th>
      <th>Classification</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @favorites.each do |anime| %>
      <tr>
        <td><%= anime.name %></td>
        <td><%= anime.gender %></td>
        <td><%= anime.classification %></td>
        <td><%= link_to 'Unfavorite', favorite_anime_path(anime, type: "unfavorite"), method: :put %></td>
        <td><%= link_to 'Show', anime %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
